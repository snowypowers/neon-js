{
  "name": "@cityofzion/neon-ledger",
  "description": "Neon Ledger integration for Node.js",
  "version": "5.0.0-next.7",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CityOfZion/neon-js.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "neo",
    "antshares",
    "javascript",
    "libraries"
  ],
  "author": "Yak Jun Xiang <snowypowers@gmail.com> (https://github.com/snowypowers)",
  "license": "MIT",
  "main": "lib/node/esm/index.js",
  "module": "lib/node/esm/index.js",
  "types": "lib/node/esm/index.d.ts",
  "exports": {
    "node": {
      "module": "./lib/node/esm/index.js",
      "import": "./lib/node/esm/index.js",
      "require": "./lib/node/cjs/index.js"
    },
    "default": "./lib/node/esm/index.js"
  },
  "scripts": {
    "build": "tsc -b",
    "build:cjs": "tsc --module commonjs --outDir lib/node/cjs",
    "clean": "rimraf ./lib tsconfig.tsbuildinfo",
    "prepublishOnly": "yarn build && yarn build:cjs",
    "lint": "eslint src/**/*.ts __tests__/**/*.ts __integration__/**/*.ts",
    "pretty": "prettier --write --loglevel=warn \"./{src,__{tests,integration}__}/**/*.ts\"",
    "start": "yarn build && jest --watch",
    "test": "jest",
    "test:integration": "jest /packages/.*/__integration__/.*",
    "test:unit": "jest /packages/.*/__tests__/.*",
    "test:node": "node test.node.js"
  },
  "dependencies": {
    "@ledgerhq/hw-transport": "5.46.0",
    "@types/ledgerhq__hw-transport": "4.21.3"
  },
  "peerDependencies": {
    "@cityofzion/neon-core": "^4.0.0"
  },
  "files": [
    "lib/"
  ],
  "devDependencies": {
    "@cityofzion/neon-js": "^4.8.0",
    "@ledgerhq/hw-transport-node-hid": "5.46.0",
    "@ledgerhq/hw-transport-u2f": "5.36.0-deprecated",
    "@types/ledgerhq__hw-transport-node-hid": "4.22.2"
  }
}